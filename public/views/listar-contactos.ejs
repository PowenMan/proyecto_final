<%- include('includes/adminlte') %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Listar Contactos</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/admin">Inicio</a></li>
              <li class="breadcrumb-item active">Contactos totales</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">Listado total de contactos</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <table id="example2" class="table table-bordered table-hover">
                <thead>
                <tr>
                  <th>Id</th>
                  <th>Nombre de usuario</th>
                  <th>Correo usuario</th>
                  <th>Telefono usuario</th>
                  <th>Mensaje usuario</th>
                  <th>Acciones</th>
                </tr>
                </thead>
                <tbody>
               <% contacts.forEach(contact => { %>
                <tr>
                  <td><%= contact.id %></td>
                  <td><%= contact.nombre %></td>
                  <td><%= contact.email %></td>
                  <td><%= contact.telefono %></td>
                  <td><%= contact.mensaje %></td>
                  <td>X</td>
                </tr>
                <% }); %>
                </tbody>
                <tfoot>
                <tr>
                  <th>Id</th>
                  <th>Nombre de usuario</th>
                  <th>Correo usuario</th>
                  <th>Telefono usuario</th>
                  <th>Mensaje usuario</th>
                  <th>Acciones</th>
                </tr>
                </tfoot>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->

        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <%- include('includes/adminfoot') %>